<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>

    <record model="ir.ui.view" id="plm_convert_servers_search">
        <field name="name">plm.convert.servers.search</field>
        <field name="model">plm.convert.servers</field>
        <field name="type">search</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <search string="Plm Convert Servers">
            	<field name="name"/>
            	<field name="address"/>
            	<field name="protocol"/>
	            <field name="port"/>
            </search>
     	</field>
    </record>

    <record model="ir.ui.view" id="plm_convert_servers_form">
        <field name="name">plm.convert.servers.form</field>
        <field name="model">plm.convert.servers</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Plm Convert Servers">
            	<sheet>	
	                <group>
	                	<field name="name" required="True"/>
	                	<field name="address" required="True"/>
		                <field name="protocol" required="True"/>
		                <field name="port" required="True" placeholder="5000"/>
		                <field name="sequence"/>
		                <button name='testConnection' type="object" string="Test"></button>
	                </group>
	                <group>
	                	<field name="proc_to_kill" attrs="{'invisible': [('client_processes', 'in', [False, ''])]}" colspan="1"/>
	                	<button name='killProcess' type="object" string="Kill" attrs="{'invisible': [('client_processes', 'in', [False, ''])]}"></button>
	                </group>
	                <group>
		                <button name='getClientProcesses' type="object" string="Get Client Processes" colspan="4"></button>
		                <field name="client_processes" readonly="True" colspan="4" nolabel="1"/>
		            </group>
               	</sheet> 
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="plm_convert_servers_tree">
        <field name="name">plm.convert.servers.tree</field>
        <field name="model">plm.convert.servers</field>
        <field name="type">tree</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <tree string="Plm Convert Servers">
            	<field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="address"/>
                <field name="protocol"/>
                <field name="port"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="plm_convert_servers_action">
        <field name="name">Plm Convert Servers</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">plm.convert.servers</field>
        <field name="view_id" ref="plm_convert_servers_tree"/>
        <field name="search_view_id" ref="plm_convert_servers_search"/>
    </record>

    <menuitem
            id="plm_convert_servers_menu"
            name="Plm Convert Servers"
            parent="plm.plm_menu_dictionaries"
            groups="plm_automated_convertion.group_plm_convert_view"
            action="plm_convert_servers_action"/>

</data>
</odoo>

