<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
        <record id="plm_docbom_form_view" model="ir.ui.view">
            <field name="name">plm.doc.relation.form</field>
            <field name="model">ir.attachment.relation</field>
            <field name="type">form</field>
        	<field name="priority" eval="10"/>
            <field name="arch" type="xml">
                <form string="Show Document Relation">
                <sheet>
                <group>
                	<field name="configuration" readonly="True"/>
                	<field name="link_kind" readonly="True"/>
                </group>
                <group colspan="4" col="4">
	               	<separator colspan="4" string="Parent Preview"/>
	                <group colspan="2" col="2">
	                    <field name="parent_id" readonly="True" domain="[('is_plm', '=', True)]"/>
	                    <field name="parent_revision" readonly="True"/>
	                    <field name="parent_state" readonly="True"/>
	                </group>
	                <group colspan="2" col="2">
	                 	<field  name="parent_preview" colspan="2"
								widget="image" 
	                     		readonly="1"
	                        	nolabel="1"
	                        	img_height="400"
	                        	img_width="400"/>
	                </group>
  					<newline/>
	            	<separator colspan="4" string="Child Preview"/>
	                <group colspan="2" col="2">
	                    <field name="child_id" readonly="True" domain="[('is_plm', '=', True)]"/>
	                    <field name="child_revision" readonly="True"/>
	                    <field name="child_state" readonly="True"/>
	                </group>
	                <group colspan="2" col="2">
	                    <field  name="child_preview" colspan="2"
								widget="image" 
	                     		readonly="1"
	                        	nolabel="1"
	                        	img_height="400"
	                        	img_width="400"/>
	                </group>
                </group>
                <group>
                	<field name="notes"/>
                </group>
               	</sheet> 
               </form>
            </field>
        </record>

        <record id="plm_docbom_form_view_readonly" model="ir.ui.view">
            <field name="name">plm.docbom.form.view.readonly</field>
            <field name="model">ir.attachment.relation</field>
            <field name="inherit_id" ref="plm.plm_docbom_form_view" />
            <field name="groups_id" eval="[(6, 0, [ref('plm.group_plm_admin')])]" />                
            <field name="arch" type="xml">                                   
                <field name="parent_id" position="attributes">
                   <attribute name="readonly">0</attribute>                   
                </field>                             
                <field name="child_id" position="attributes">
                   <attribute name="readonly">0</attribute>                   
                </field>  
                <field name="configuration" position="attributes">
                   <attribute name="readonly">0</attribute>                   
                </field>                             
                <field name="link_kind" position="attributes">
                   <attribute name="readonly">0</attribute>                   
                </field>
            </field>
        </record>


       <record id="plm_docbom_tree_view" model="ir.ui.view">
            <field name="name">plm.doc.relation.tree</field>
            <field name="model">ir.attachment.relation</field>
            <field name="type">tree</field>
        	<field name="priority" eval="10"/>
            <field name="arch" type="xml">
                <tree string="Document Relations">
                    <field name="parent_id" select="True"/>
                    <field name="parent_revision" select="True"/>
                    <field name="parent_state" select="True"/>
                    <field name="child_id" select="True"/>
                    <field name="child_revision" select="True"/>
                    <field name="child_state" select="True"/>
                    <field name="userid" select="True"/>
                    <field name="configuration"/>
                    <field name="link_kind"  select="True"/>
                    <field name="create_date" invisible="True"/>
                </tree>
            </field>
        </record>

        <record id="plm_docbom_search" model="ir.ui.view">
            <field name="name">plm.doc.relation.search</field>
            <field name="model">ir.attachment.relation</field>
            <field name="type">search</field>
        	<field name="priority" eval="10"/>
            <field name="arch" type="xml">
				<search string="Search on Document Relations">
                   	<filter name="last_week"
                   	        string="Last Week"
                         	domain="[('create_date','&lt;=', (datetime.date.today()-relativedelta(weeks=1)).strftime('%%Y-%%m-%%d')),('create_date','&gt;=',(datetime.date.today()-relativedelta(weeks=2)).strftime('%%Y-%%m-%%d'))]"
                          	help="Created last week"/>
                 	<filter name="yestarday"
                 	        string="Yesterday"
                           	domain="[('create_date','&lt;', (datetime.date.today()).strftime('%%Y-%%m-%%d 00:00:00')),('create_date','&gt;=',(datetime.date.today()-relativedelta(days=1)).strftime('%%Y-%%m-%%d 00:00:00'))]"
                    		help="Created yesterday"/>
                	<filter name="today"
                	        string="Today"
                          	domain="[('create_date','&lt;=', (datetime.date.today()).strftime('%%Y-%%m-%%d 23:59:59')),('create_date','&gt;=',(datetime.date.today()).strftime('%%Y-%%m-%%d 00:00:00'))]"
                         	help="Created today"/>
                   	<separator orientation="vertical"/>
                    <field name="parent_id"/>
                    <field name="child_id"/>
                    <field name="link_kind"  string="Document Relation Kind"/>
                    <newline/>
                    <group expand="0" string="Group by...">
                        <filter name="parent"
                                string="Parent"
                                domain="[]"
                                context="{'group_by':'parent_id'}"/>
                        <filter name="child"
                                string="Child"
                                context="{'group_by' : 'child_id'}"/>
                        <filter name="kind"
                                string="Kind"
                                domain="[]"
                                context="{'group_by':'link_kind'}"/>
                   </group>
                </search>
            </field>
        </record>


    <record id="document_document_relation_kanban_view" model="ir.ui.view">
        <field name="name">document.document.relation.kanban.view</field>
        <field name="model">ir.attachment.relation</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="parent_id" select="True"/>
                <field name="parent_revision" select="True"/>
                <field name="parent_state" select="True"/>
                <field name="parent_preview"/>
                <field name="child_id" select="True"/>
                <field name="child_revision" select="True"/>
                <field name="child_state" select="True"/>
                <field name="child_preview"/>
                <field name="userid" select="True"/>
                <field name="configuration"/>
                <field name="link_kind"  select="True"/>
                <field name="create_date" invisible="True"/>
                <field name="parent_type" invisible="True"/>
                <field name="child_type" invisible="True"/>
                <templates>
                    <t t-name="kanban-box">
                    	<t t-value="record.parent_state.raw_value" t-set="stateToUse1"/>
                    	<t t-value="record.child_state.raw_value" t-set="stateToUse2"/>
                        <div class="oe_kanban_global_click">
                            <table style="width: 100%;">
                            	<tr>
                                	<td>
                        				<strong attrs="{'invisible': [('parent_type', '!=', 'other')]}">Other-Parent</strong>
                        				<strong attrs="{'invisible': [('parent_type', '!=', '2d')]}">2D-Parent</strong>
                        				<strong attrs="{'invisible': [('parent_type', '!=', '3d')]}">3D-Parent</strong>
                        			</td>
                        			<td style="text-align: right; width: 100%;">
                            			<field name="parent_linked" invisible="True"/>
	                            		<div
	                            			class="fa fa-dropbox fa-2x"
	                            			aria-label="Missing Component"
	                            			style="color:#ff8300;"
	                            			attrs="{'invisible': [('parent_linked', 'not in', [False, []])]}"/>
                            		</td>
                            		<td style="text-align: right; width: 100%;">
                            			<div
	                            			class="fa fa-dropbox fa-2x"
	                            			aria-label="Founding Component"
	                            			style="color: green;"
	                            			attrs="{'invisible': [('parent_linked', 'in', [False, []])]}"/>
                            		</td>
                        		</tr>
                            	<tr>
                            		<td rowspan="2">
                            			<field name="parent_preview" nolabel="1" widget="image" class="oe_right oe_avatar" height="100" width="100"/>
                            		</td>
                            	</tr>
                            	<tr>
                                	<td style="padding-left:10px; vertical-align: middle;">
                                		<table>
                                			<tr>
                                                <td>
                                                	<t t-if="stateToUse1 == 'draft'">
                                                        <b><span style="color: rgb(110, 51, 197);">
                                                         	<t><strong>______________________</strong></t>
                                                       	</span></b>
                                                    </t>
                                                    <t t-elif="stateToUse1 == 'confirmed'">
                                                        <b><span style="color: blue;">
                                                        	<t><strong>______________________</strong></t>
                                                        </span></b>
                                                    </t>
                                                    <t t-elif="stateToUse1 == 'released'">
                                                        <b><span style="color: rgba(0, 170, 34, 0.66);">
                                                        	<t><strong>______________________</strong></t>
                                                       	</span></b>
                                                    </t>
                                                    <t t-elif="stateToUse1 == 'undermodify'">
                                                        <b><span style="color: rgb(218, 159, 34);">
                                                        	<t><strong>______________________</strong></t>
                                                      	</span></b>
                                                    </t>
                                                    <t t-elif="stateToUse1 == 'obsoleted'">
                                                        <b><span style="color: rgb(231, 43, 26);">
                                                        	<t><strong>______________________</strong></t>
                                                        </span></b>
                                                    </t>
													<t t-else="">
                                                        <b><span style="color: black;">
                                                        	<t><strong>______________________</strong></t>
                                                      	</span></b>
													</t>
                                                    <t><strong>Name:</strong></t>
                                                    <field name="parent_id"/>
                                                    <field name="display_name" attrs="{'invisible': [('parent_id', 'not in', [False, []])]}"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <t><strong>Revision:</strong></t>
                                                    <field name="parent_revision"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <strong>State:</strong>
                                                    <t t-if="stateToUse1 == 'draft'">
                                                        <b><span style="color: rgb(110, 51, 197);padding-left: 5px;">
                                                         	<u><field name="parent_state"/></u>
                                                         	<t><strong>______________________</strong></t>
                                                       	</span></b>
                                                    </t>
                                                    <t t-elif="stateToUse1 == 'confirmed'">
                                                        <b><span style="color: blue;padding-left: 5px;">
                                                        	<u><field name="parent_state"/></u>
                                                        	<t><strong>______________________</strong></t>
                                                        </span></b>
                                                    </t>
                                                    <t t-elif="stateToUse1 == 'released'">
                                                        <b><span style="color: rgba(0, 170, 34, 0.66);padding-left: 5px;">
                                                        	<u><field name="parent_state"/></u>
                                                        	<t><strong>______________________</strong></t>
                                                       	</span></b>
                                                    </t>
                                                    <t t-elif="stateToUse1 == 'undermodify'">
                                                        <b><span style="color: rgb(218, 159, 34);padding-left: 5px;">
                                                        	<u><field name="parent_state"/></u>
                                                        	<t><strong>______________________</strong></t>
                                                      	</span></b>
                                                    </t>
                                                    <t t-elif="stateToUse1 == 'obsoleted'">
                                                        <b><span style="color: rgb(231, 43, 26);padding-left: 5px;">
                                                        	<u><field name="parent_state"/></u>
                                                        	<t><strong>______________________</strong></t>
                                                        </span></b>
                                                    </t>
													<t t-else="">
                                                        <b><span style="color: black;padding-left: 5px;">
                                                        	<u><field name="parent_state"/></u>
                                                        	<t><strong>______________________</strong></t>
                                                      	</span></b>
													</t>
                                                </td>
                                            </tr>
                                		</table>
                                	</td>
                                </tr>
                                <tr>
                                	<td>
                        				<strong attrs="{'invisible': [('child_type', '!=', 'other')]}">Other-Child</strong>
                        				<strong attrs="{'invisible': [('child_type', '!=', '2d')]}">2D-Child</strong>
                        				<strong attrs="{'invisible': [('child_type', '!=', '3d')]}">3D-Child</strong>
                        			</td>
                        			<td style="text-align: right; width: 100%;">
                            			<field name="child_linked" invisible="True"/>
	                            		<div
	                            			class="fa fa-dropbox fa-2x"
	                            			aria-label="Missing Component"
	                            			style="color:#ff8300;"
	                            			attrs="{'invisible': [('child_linked', 'not in', [False, []])]}"/>
                            		</td>
                            		<td style="text-align: right; width: 100%;">
                            			<div
	                            			class="fa fa-dropbox fa-2x"
	                            			aria-label="Founding Component"
	                            			style="color: green;"
	                            			attrs="{'invisible': [('child_linked', 'in', [False, []])]}"/>
                            		</td>
                        		</tr>
                            	<tr>
                            		<td rowspan="2">
                            			<field name="child_preview" nolabel="1" widget="image" class="oe_right oe_avatar" height="100" width="100"/>
                            		</td>
                            	</tr>
                            	<tr>
                                	<td style="padding-left:10px; vertical-align: middle;">
                                		<table>
                                			<tr>
                                                <td>
                                                	<t t-if="stateToUse2 == 'draft'">
                                                        <b><span style="color: rgb(110, 51, 197);">
                                                         	<t><strong>______________________</strong></t>
                                                       	</span></b>
                                                    </t>
                                                    <t t-elif="stateToUse2 == 'confirmed'">
                                                        <b><span style="color: blue;">
                                                        	<t><strong>______________________</strong></t>
                                                        </span></b>
                                                    </t>
                                                    <t t-elif="stateToUse2 == 'released'">
                                                        <b><span style="color: rgba(0, 170, 34, 0.66);">
                                                        	<t><strong>______________________</strong></t>
                                                       	</span></b>
                                                    </t>
                                                    <t t-elif="stateToUse2 == 'undermodify'">
                                                        <b><span style="color: rgb(218, 159, 34);">
                                                        	<t><strong>______________________</strong></t>
                                                      	</span></b>
                                                    </t>
                                                    <t t-elif="stateToUse2 == 'obsoleted'">
                                                        <b><span style="color: rgb(231, 43, 26);">
                                                        	<t><strong>______________________</strong></t>
                                                        </span></b>
                                                    </t>
													<t t-else="">
                                                        <b><span style="color: black;">
                                                        	<t><strong>______________________</strong></t>
                                                      	</span></b>
													</t>
                                                    <t><strong>Name:</strong></t>
                                                    <field name="child_id"/>
                                                    <field name="display_name" attrs="{'invisible': [('child_id', 'not in', [False, []])]}"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <t><strong>Revision:</strong></t>
                                                    <field name="child_revision"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <strong>State:</strong>
                                                    <t t-if="stateToUse2 == 'draft'">
                                                        <b><span style="color: rgb(110, 51, 197);padding-left: 5px;">
                                                         	<u><field name="child_state"/></u>
                                                         	<t><strong>______________________</strong></t>
                                                       	</span></b>
                                                    </t>
                                                    <t t-elif="stateToUse2 == 'confirmed'">
                                                        <b><span style="color: blue;padding-left: 5px;">
                                                        	<u><field name="child_state"/></u>
                                                        	<t><strong>______________________</strong></t>
                                                        </span></b>
                                                    </t>
                                                    <t t-elif="stateToUse2 == 'released'">
                                                        <b><span style="color: rgba(0, 170, 34, 0.66);padding-left: 5px;">
                                                        	<u><field name="child_state"/></u>
                                                        	<t><strong>______________________</strong></t>
                                                       	</span></b>
                                                    </t>
                                                    <t t-elif="stateToUse2 == 'undermodify'">
                                                        <b><span style="color: rgb(218, 159, 34);padding-left: 5px;">
                                                        	<u><field name="child_state"/></u>
                                                        	<t><strong>______________________</strong></t>
                                                      	</span></b>
                                                    </t>
                                                    <t t-elif="stateToUse2 == 'obsoleted'">
                                                        <b><span style="color: rgb(231, 43, 26);padding-left: 5px;">
                                                        	<u><field name="child_state"/></u>
                                                        	<t><strong>______________________</strong></t>
                                                        </span></b>
                                                    </t>
													<t t-else="">
                                                        <b><span style="color: black;padding-left: 5px;">
                                                        	<u><field name="child_state"/></u>
                                                        	<t><strong>______________________</strong></t>
                                                      	</span></b>
													</t>
                                                </td>
                                            </tr>
                                		</table>
                                	</td>
                                </tr>
                           	</table>
                        </div>
             		</t>
                </templates>
            </kanban>
        </field>
    </record>

    <record model="ir.actions.act_window" id="plm_action_document_relations">
   	   <field name="name">Document Relations</field>
   	   <field name="res_model">ir.attachment.relation</field>
   	   <field name="view_mode">kanban,tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="act_view_doc_related">
        <field name="name">View Document Relations</field>
        <field name="res_model">ir.attachment.relation</field>
        <field name="binding_model_id" ref="model_ir_attachment"/> 
        <field name="view_mode">kanban,tree,form</field>
        <field name="view_id" ref="plm_docbom_tree_view"/>
        <field name="domain">['|', ('child_id', 'in', context.get('active_ids', [])), ('parent_id', '=', context.get('active_ids', []))]</field>
    </record>
    
</data>
</odoo>
