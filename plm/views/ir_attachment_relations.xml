<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
        <record id="plm_docbom_form_view" model="ir.ui.view">
            <field name="name">plm.doc.relation.form</field>
            <field name="model">ir.attachment.relation</field>
            <field name="type">form</field>
        	<field name="priority" eval="10"/>
            <field name="arch" type="xml">
                <form string="Show Document Relation">
                <sheet>
                <group>
                	<field name="configuration" readonly="True"/>
                	<field name="link_kind" readonly="True"/>
                </group>
                <group colspan="4" col="4">
                   	<span colspan="4" style="color: rgb(110, 51, 197);" attrs="{'invisible': [('parent_state', '!=', 'draft')]}">
                		<hr style="background-color: rgb(110, 51, 197);height: 1px;"></hr>
               		</span>
               		<span colspan="4" style="color: rgb(0, 0, 255);" attrs="{'invisible': [('parent_state', '!=', 'confirmed')]}">
                		<hr style="background-color: blue;height: 1px;"></hr>
               		</span>
               		<span colspan="4" style="color: rgba(0, 170, 34, 0.66);" attrs="{'invisible': [('parent_state', '!=', 'released')]}">
                		<hr style="background-color: rgba(0, 170, 34, 0.66);height: 1px;"></hr>
               		</span>
               		<span colspan="4" style="color: rgb(218, 159, 34);" attrs="{'invisible': [('parent_state', '!=', 'undermodify')]}">
                		<hr style="background-color: rgb(218, 159, 34);height: 1px;"></hr>
               		</span>
               		<span colspan="4" style="color: rgb(231, 43, 26);" attrs="{'invisible': [('parent_state', '!=', 'obsoleted')]}">
                		<hr style="background-color: rgb(231, 43, 26);height: 1px;"></hr>
               		</span>
	               	<separator colspan="4" string="Parent Preview" style="color: rgb(110, 51, 197);" attrs="{'invisible': [('parent_state', '!=', 'draft')]}"/>
	                <separator colspan="4" string="Parent Preview" style="color: blue;" attrs="{'invisible': [('parent_state', '!=', 'confirmed')]}"/>
	                <separator colspan="4" string="Parent Preview" style="color: rgba(0, 170, 34, 0.66);" attrs="{'invisible': [('parent_state', '!=', 'released')]}"/>
	                <separator colspan="4" string="Parent Preview" style="color: rgb(218, 159, 34);" attrs="{'invisible': [('parent_state', '!=', 'undermodify')]}"/>
	                <separator colspan="4" string="Parent Preview" style="color: rgb(231, 43, 26);" attrs="{'invisible': [('parent_state', '!=', 'obsoleted')]}"/>
	                <group colspan="2" col="2">
	                    <field name="parent_id" readonly="True" domain="[('is_plm', '=', True)]"/>
	                    <field name="parent_revision" readonly="True"/>
	                    <field name="parent_type" readonly="True"/>
                        <field name="parent_state" readonly="True" style="color: rgb(110, 51, 197);" attrs="{'invisible': [('parent_state', '!=', 'draft')]}"/>
                        <field name="parent_state" readonly="True" style="color: blue;" attrs="{'invisible': [('parent_state', '!=', 'confirmed')]}"/>
                        <field name="parent_state" readonly="True" style="color: rgba(0, 170, 34, 0.66);" attrs="{'invisible': [('parent_state', '!=', 'released')]}"/>
                        <field name="parent_state" readonly="True" style="color: rgb(218, 159, 34);" attrs="{'invisible': [('parent_state', '!=', 'undermodify')]}"/>
                        <field name="parent_state" readonly="True" style="color: rgb(231, 43, 26);" attrs="{'invisible': [('parent_state', '!=', 'obsoleted')]}"/>
	                </group>
	                 <group colspan="1" col="1">
	                 	<field name="parent_preview" colspan="2" widget="image" readonly="1" nolabel="1" img_height="400" img_width="400"/>
	                </group>
	                <group colspan="1" col="1">
               			<field name="parent_linked" invisible="True"/>
                		<div
                			class="fa fa-dropbox fa-2x"
                			aria-label="Missing Component"
                			style="text-align: right; width: 150%; color:#ff8300;"
                			attrs="{'invisible': [('parent_linked', 'not in', [False, []])]}"/>
               			<div
                			class="fa fa-dropbox fa-2x"
                			aria-label="Founding Component"
                			style="text-align: right; width: 150%; color: green;"
                			attrs="{'invisible': [('parent_linked', 'in', [False, []])]}"/>
	                </group>
	                <span colspan="4" style="color: rgb(110, 51, 197);" attrs="{'invisible': [('parent_state', '!=', 'draft')]}">
                		<hr style="background-color: rgb(110, 51, 197);height: 1px;"></hr>
               		</span>
               		<span colspan="4" style="color: rgb(0, 0, 255);" attrs="{'invisible': [('parent_state', '!=', 'confirmed')]}">
                		<hr style="background-color: blue;height: 1px;"></hr>
               		</span>
               		<span colspan="4" style="color: rgba(0, 170, 34, 0.66);" attrs="{'invisible': [('parent_state', '!=', 'released')]}">
                		<hr style="background-color: rgba(0, 170, 34, 0.66);height: 1px;"></hr>
               		</span>
               		<span colspan="4" style="color: rgb(218, 159, 34);" attrs="{'invisible': [('parent_state', '!=', 'undermodify')]}">
                		<hr style="background-color: rgb(218, 159, 34);height: 1px;"></hr>
               		</span>
               		<span colspan="4" style="color: rgb(231, 43, 26);" attrs="{'invisible': [('parent_state', '!=', 'obsoleted')]}">
                		<hr style="background-color: rgb(231, 43, 26);height: 1px;"></hr>
               		</span>
  					<newline/>
  					<span colspan="4" style="color: rgb(110, 51, 197);" attrs="{'invisible': [('child_state', '!=', 'draft')]}">
                		<hr style="background-color: rgb(110, 51, 197);height: 1px;"></hr>
               		</span>
               		<span colspan="4" style="color: rgb(0, 0, 255);" attrs="{'invisible': [('child_state', '!=', 'confirmed')]}">
                		<hr style="background-color: blue;height: 1px;"></hr>
               		</span>
               		<span colspan="4" style="color: rgba(0, 170, 34, 0.66);" attrs="{'invisible': [('child_state', '!=', 'released')]}">
                		<hr style="background-color: rgba(0, 170, 34, 0.66);height: 1px;"></hr>
               		</span>
               		<span colspan="4" style="color: rgb(218, 159, 34);" attrs="{'invisible': [('child_state', '!=', 'undermodify')]}">
                		<hr style="background-color: rgb(218, 159, 34);height: 1px;"></hr>
               		</span>
               		<span colspan="4" style="color: rgb(231, 43, 26);" attrs="{'invisible': [('child_state', '!=', 'obsoleted')]}">
                		<hr style="background-color: rgb(231, 43, 26);height: 1px;"></hr>
               		</span>
	            	<separator colspan="4" string="Child Preview" style="color: rgb(110, 51, 197);" attrs="{'invisible': [('child_state', '!=', 'draft')]}"/>
                    <separator colspan="4" string="Child Preview" style="color: blue;" attrs="{'invisible': [('child_state', '!=', 'confirmed')]}"/>
                    <separator colspan="4" string="Child Preview" style="color: rgba(0, 170, 34, 0.66);" attrs="{'invisible': [('child_state', '!=', 'released')]}"/>
                    <separator colspan="4" string="Child Preview" style="color: rgb(218, 159, 34);" attrs="{'invisible': [('child_state', '!=', 'undermodify')]}"/>
                    <separator colspan="4" string="Child Preview" style="color: rgb(231, 43, 26);" attrs="{'invisible': [('child_state', '!=', 'obsoleted')]}"/>
	                <group colspan="2" col="2">
	                    <field name="child_id" readonly="True" domain="[('is_plm', '=', True)]"/>
	                    <field name="child_revision" readonly="True"/>
	                    <field name="child_type" readonly="True"/>
	                    <field name="child_state" readonly="True" style="color: rgb(110, 51, 197);" attrs="{'invisible': [('child_state', '!=', 'draft')]}"/>
                        <field name="child_state" readonly="True" style="color: blue;" attrs="{'invisible': [('child_state', '!=', 'confirmed')]}"/>
                        <field name="child_state" readonly="True" style="color: rgba(0, 170, 34, 0.66);" attrs="{'invisible': [('child_state', '!=', 'released')]}"/>
                        <field name="child_state" readonly="True" style="color: rgb(218, 159, 34);" attrs="{'invisible': [('child_state', '!=', 'undermodify')]}"/>
                        <field name="child_state" readonly="True" style="color: rgb(231, 43, 26);" attrs="{'invisible': [('child_state', '!=', 'obsoleted')]}"/>
	                </group>
	                <group colspan="1" col="1">
	                    <field name="child_preview" colspan="2" widget="image" readonly="1" nolabel="1" img_height="400" img_width="400"/>
	                </group>
	                <group colspan="1" col="1">
               			<field name="child_linked" invisible="True"/>
                		<div
                			class="fa fa-dropbox fa-2x"
                			aria-label="Missing Component"
                			style="text-align: right; width: 150%; color:#ff8300;"
                			attrs="{'invisible': [('child_linked', 'not in', [False, []])]}"/>
               			<div
                			class="fa fa-dropbox fa-2x"
                			aria-label="Founding Component"
                			style="text-align: right; width: 150%; color: green;"
                			attrs="{'invisible': [('child_linked', 'in', [False, []])]}"/>
	                </group>
	            <span colspan="4" style="color: rgb(110, 51, 197);" attrs="{'invisible': [('child_state', '!=', 'draft')]}">
            		<hr style="background-color: rgb(110, 51, 197);height: 1px;"></hr>
           		</span>
           		<span colspan="4" style="color: rgb(0, 0, 255);" attrs="{'invisible': [('child_state', '!=', 'confirmed')]}">
            		<hr style="background-color: blue;height: 1px;"></hr>
           		</span>
           		<span colspan="4" style="color: rgba(0, 170, 34, 0.66);" attrs="{'invisible': [('child_state', '!=', 'released')]}">
            		<hr style="background-color: rgba(0, 170, 34, 0.66);height: 1px;"></hr>
           		</span>
           		<span colspan="4" style="color: rgb(218, 159, 34);" attrs="{'invisible': [('child_state', '!=', 'undermodify')]}">
            		<hr style="background-color: rgb(218, 159, 34);height: 1px;"></hr>
           		</span>
           		<span colspan="4" style="color: rgb(231, 43, 26);" attrs="{'invisible': [('child_state', '!=', 'obsoleted')]}">
            		<hr style="background-color: rgb(231, 43, 26);height: 1px;"></hr>
           		</span>
                </group>
                <group>
                	<field name="notes"/>
                </group>
               	</sheet> 
               </form>
            </field>
        </record>

        <record id="plm_docbom_form_view_readonly" model="ir.ui.view">
            <field name="name">plm.docbom.form.view.readonly</field>
            <field name="model">ir.attachment.relation</field>
            <field name="inherit_id" ref="plm.plm_docbom_form_view" />
            <field name="groups_id" eval="[(6, 0, [ref('plm.group_plm_admin')])]" />                
            <field name="arch" type="xml">                                   
                <field name="parent_id" position="attributes">
                   <attribute name="readonly">0</attribute>                   
                </field>                             
                <field name="child_id" position="attributes">
                   <attribute name="readonly">0</attribute>                   
                </field>  
                <field name="configuration" position="attributes">
                   <attribute name="readonly">0</attribute>                   
                </field>                             
                <field name="link_kind" position="attributes">
                   <attribute name="readonly">0</attribute>                   
                </field>
            </field>
        </record>


       <record id="plm_docbom_tree_view" model="ir.ui.view">
            <field name="name">plm.doc.relation.tree</field>
            <field name="model">ir.attachment.relation</field>
            <field name="type">tree</field>
        	<field name="priority" eval="10"/>
            <field name="arch" type="xml">
                <tree string="Document Relations">
                    <field name="parent_id" select="True"/>
                    <field name="parent_revision" select="True"/>
                    <field name="parent_state" select="True"/>
                    <field name="child_id" select="True"/>
                    <field name="child_revision" select="True"/>
                    <field name="child_state" select="True"/>
                    <field name="userid" select="True"/>
                    <field name="configuration"/>
                    <field name="link_kind"  select="True"/>
                    <field name="create_date" invisible="True"/>
                </tree>
            </field>
        </record>

        <record id="plm_docbom_search" model="ir.ui.view">
            <field name="name">plm.doc.relation.search</field>
            <field name="model">ir.attachment.relation</field>
            <field name="type">search</field>
        	<field name="priority" eval="10"/>
            <field name="arch" type="xml">
				<search string="Search on Document Relations">
             		<field name="parent_type"/>
             		<field name="child_type"/>
                   	<filter 
            			name="last_year" 
            			string="Last Year" 
            			domain="[('create_date','&gt;=',(datetime.date.today() - relativedelta(days=1,months=1,years=1)).strftime('%%Y-%%m-%%d'))]"/>
           			<filter 
            			name="last_month" 
            			string="Last Month" 
            			domain="[('create_date','&gt;=',(datetime.date.today() - relativedelta(days=1,months=1)).strftime('%%Y-%%m-%%d'))]"/>
            		<filter 
            			name="last_week" 
            			string="Last Week" 
            			domain="[('create_date','&gt;=',(datetime.date.today() - datetime.timedelta(weeks=2)).strftime('%%Y-%%m-%%d'))]"/>
            		<separator orientation="vertical"/>
	            	<field name="parent_state"/>
	              	<filter name="confirmed_p"
	                      	string="Parent Confirmed"
	                      	domain="[('parent_state', '=', 'confirmed')]"/>
	                <filter name="confirmed_c"
	                      	string="Child Confirmed"
	                      	domain="[('child_state', '=', 'confirmed')]"/>
	               	<separator orientation="vertical"/>
	              	<filter name="released_p"
	                      	string="Parent Released"
	                      	domain="[('parent_state', 'in', ['released','undermodify'])]"/>
	                <filter name="released_c"
	                      	string="Child Released"
	                      	domain="[('child_state', 'in', ['released','undermodify'])]"/>
	                <separator orientation="vertical"/>
	              	<filter name="latest_p"
	                      	string="Latest Parent"
	                      	domain="[('parent_state', 'not in', ['obsoleted','undermodify'])]"/>
	                <filter name="latest_c"
	                      	string="Latest Child"
	                      	domain="[('child_state', 'not in', ['obsoleted','undermodify'])]"/>
	              	<separator orientation="vertical"/>
	          		<group>
		                <field name="create_uid"/>
		                <filter name="create_by_me"
		                        string="Create By Me"
		                        domain="[('create_uid','=',uid)]"
		                        help="Filter on documents created by me"/>
		              	<field name="write_uid"/>
		            	<filter name="changed_by_me"
		                       	string="Changed By Me"
		                       	domain="[('write_uid','=',uid)]"
		                       	help="Filter on documents changed by me"/>
	               	</group>
            		<group expand="0" string="Group By...">
	                	<filter name="created_in"
	                            string="Created in"
	                            domain="[]"
	                            context="{'group_by':'create_date'}"/>
	                    <filter name="canged_in"
	                            string="Changed in"
	                            domain="[]"
	                            context="{'group_by':'write_date'}"/>
	                    <separator orientation="vertical"/>
	                    <filter name="create_by"
	                            string="Created by"
	                            domain="[]"
	                            context="{'group_by':'create_uid'}"/>
	                    <filter name="changed_by"
	                            string="Changed by"
	                            domain="[]"
	                            context="{'group_by':'write_uid'}"/>
	                    <separator orientation="vertical"/>
              		</group>
                   	<separator orientation="vertical"/>
                    <field name="parent_id"/>
                    <field name="child_id"/>
                    <field name="link_kind"  string="Document Relation Kind"/>
                    <newline/>
                    <group expand="0" string="Group by...">
                        <filter name="parent"
                                string="Parent"
                                domain="[]"
                                context="{'group_by':'parent_id'}"/>
                        <filter name="child"
                                string="Child"
                                context="{'group_by' : 'child_id'}"/>
                        <filter name="kind"
                                string="Kind"
                                domain="[]"
                                context="{'group_by':'link_kind'}"/>
                   </group>
                </search>
            </field>
        </record>


    <record id="document_document_relation_kanban_view" model="ir.ui.view">
        <field name="name">document.document.relation.kanban.view</field>
        <field name="model">ir.attachment.relation</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="parent_id" select="True"/>
                <field name="parent_revision" select="True"/>
                <field name="parent_state" select="True"/>
                <field name="parent_preview"/>
                <field name="child_id" select="True"/>
                <field name="child_revision" select="True"/>
                <field name="child_state" select="True"/>
                <field name="child_preview"/>
                <field name="userid" select="True"/>
                <field name="configuration"/>
                <field name="link_kind"  select="True"/>
                <field name="create_date" invisible="True"/>
                <field name="parent_type" invisible="True"/>
                <field name="child_type" invisible="True"/>
                <templates>
                    <t t-name="kanban-box">
                    	<t t-value="record.parent_state.raw_value" t-set="stateToUse1"/>
                    	<t t-value="record.child_state.raw_value" t-set="stateToUse2"/>
						<field name="parent_linked" invisible="True"/>
						<field name="child_linked" invisible="True"/>
                        <div class="oe_kanban_global_click">
                            <table style="width: 100%; line-height: 1;">
                            	<tr style="text-align: right; width: 100%; padding:1px;">
                        			<td style="text-align: left;">
                        				<strong>Parent</strong>
                        			</td>
                        			<td>
                        				<strong attrs="{'invisible': [('parent_type', '!=', 'other')]}">Other</strong>
                        				<strong attrs="{'invisible': [('parent_type', '!=', '2d')]}">2D</strong>
                        				<strong attrs="{'invisible': [('parent_type', '!=', '3d')]}">3D</strong>
                        			</td>
                        			<td>
	                            		<div class="fa fa-dropbox fa-2x" aria-label="Missing Component" style="color:#ff8300;" attrs="{'invisible': [('parent_linked', 'not in', [False, []])]}"/>
                            			<div class="fa fa-dropbox fa-2x" aria-label="Founding Component" style="color: green;" attrs="{'invisible': [('parent_linked', 'in', [False, []])]}"/>
                            		</td>
                        		</tr>
                            	<tr>
                            		<td>
                            			<field name="parent_preview" nolabel="1" widget="image" class="oe_right oe_avatar" height="100" width="100"/>
                            		</td>
                                	<td style="padding-left:10px; vertical-align: middle;" colspan="2">
                                		<table style="width:100%">
                                			<tr>
                                                <td>
                                                	<t t-if="stateToUse1 == 'draft'">
                                                		<hr style="background-color: rgb(110, 51, 197);height: 1px; margin: 0,5;"></hr>
                                                    </t>
                                                    <t t-elif="stateToUse1 == 'confirmed'">
                                                    	<hr style="background-color: blue;height: 1px; margin: 0,5;"></hr>
                                                    </t>
                                                    <t t-elif="stateToUse1 == 'released'">
                                                    	<hr style="background-color: rgba(0, 170, 34, 0.66);height: 1px; margin: 0,5;"></hr>
                                                    </t>
                                                    <t t-elif="stateToUse1 == 'undermodify'">
                                                    	<hr style="background-color: rgb(218, 159, 34);height: 1px; margin: 0,5;"></hr>
                                                    </t>
                                                    <t t-elif="stateToUse1 == 'obsoleted'">
                                                    	<hr style="background-color: rgb(231, 43, 26);height: 1px; margin: 0,5;"></hr>
                                                    </t>
													<t t-else="">
														<hr style="background-color: black;height: 1px; margin: 0,5;"></hr>
													</t>
												</td>
											</tr>
											<tr>
												<td>
                                                    <t><strong>Name:</strong></t>
                                                    <field name="parent_id"/>
                                                    <field name="display_name" attrs="{'invisible': [('parent_id', 'not in', [False, []])]}"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <t><strong>Revision:</strong></t>
                                                    <field name="parent_revision"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <strong>State:</strong>
                                                    <t t-if="stateToUse1 == 'draft'">
                                                        <b><span style="color: rgb(110, 51, 197);padding-left: 5px;">
                                                         	<u><field name="parent_state"/></u>
                                                       	</span></b>
                                                    </t>
                                                    <t t-elif="stateToUse1 == 'confirmed'">
                                                        <b><span style="color: blue;padding-left: 5px;">
                                                        	<u><field name="parent_state"/></u>
                                                        </span></b>
                                                    </t>
                                                    <t t-elif="stateToUse1 == 'released'">
                                                        <b><span style="color: rgba(0, 170, 34, 0.66);padding-left: 5px;">
                                                        	<u><field name="parent_state"/></u>
                                                       	</span></b>
                                                    </t>
                                                    <t t-elif="stateToUse1 == 'undermodify'">
                                                        <b><span style="color: rgb(218, 159, 34);padding-left: 5px;">
                                                        	<u><field name="parent_state"/></u>
                                                      	</span></b>
                                                    </t>
                                                    <t t-elif="stateToUse1 == 'obsoleted'">
                                                        <b><span style="color: rgb(231, 43, 26);padding-left: 5px;">
                                                        	<u><field name="parent_state"/></u>
                                                        </span></b>
                                                    </t>
													<t t-else="">
                                                        <b><span style="color: black;padding-left: 5px;">
                                                        	<u><field name="parent_state"/></u>
                                                      	</span></b>
													</t>
                                                </td>
                                            </tr>
                                			<tr>
                                                <td>
                                                	<t t-if="stateToUse1 == 'draft'">
                                                		<hr style="background-color: rgb(110, 51, 197);height: 1px; margin: 0,5;"></hr>
                                                    </t>
                                                    <t t-elif="stateToUse1 == 'confirmed'">
                                                    	<hr style="background-color: blue;height: 1px; margin: 0,5;"></hr>
                                                    </t>
                                                    <t t-elif="stateToUse1 == 'released'">
                                                    	<hr style="background-color: rgba(0, 170, 34, 0.66);height: 1px; margin: 0,5;"></hr>
                                                    </t>
                                                    <t t-elif="stateToUse1 == 'undermodify'">
                                                    	<hr style="background-color: rgb(218, 159, 34);height: 1px; margin: 0,5;"></hr>
                                                    </t>
                                                    <t t-elif="stateToUse1 == 'obsoleted'">
                                                    	<hr style="background-color: rgb(231, 43, 26);height: 1px; margin: 0,5;"></hr>
                                                    </t>
													<t t-else="">
														<hr style="background-color: black;height: 1px; margin: 0,5;"></hr>
													</t>
												</td>
											</tr>
                                		</table>
                                	</td>
                                </tr>
                                <tr style="text-align: right; width: 100%; padding:1px;">
                        			<td style="text-align: left;">
                        				<strong>Child</strong>
                        			</td>
                        			<td style="text-align: right; width: 100%;padding:1px;">
                        				<strong attrs="{'invisible': [('child_type', '!=', 'other')]}">Other</strong>
                        				<strong attrs="{'invisible': [('child_type', '!=', '2d')]}">2D</strong>
                        				<strong attrs="{'invisible': [('child_type', '!=', '3d')]}">3D</strong>
                        			</td>
